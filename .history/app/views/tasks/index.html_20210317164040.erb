<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <ol>
        <li><%= task.name %></li>
        <li><%= link_to 'Show', task %></li>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </ol>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
